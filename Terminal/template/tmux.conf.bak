# map prefix
set-option -g prefix C-b
set-option -g prefix2 C-a
bind C-a send-prefix
bind C-b send-prefix

#
# Options
#
# Activate inner-most session (when nesting tmux) to send commands
bind a send-prefix
bind b send-prefix

# start with window 1 (instead of 0)
set -g base-index 1

# start with pane 1
set -g pane-base-index 1

# increase scroll-back history
set -g history-limit 10000

# shorten command delay
set -sg escape-time 1

# Enable mouse control (clickable windows, panes, resizable panes)
set-option -g mouse on
setw -g alternate-screen on

#
# Keybinds
#

# open new windows in the current path
bind t new-window -c "#{pane_current_path}"

# rename current window
bind n command-prompt 'rename-window %%'

# reload config file (change file location to your the tmux.conf you want to use)
#bind R source-file ~/.tmux.conf

# refresh client
bind r refresh-client

# adjust terminal zoom
#bind -r + send-keys C-+
#bind -r - send-keys C--
#bind = send-keys C-0

# Pane Splitting
bind \\ split-window -h -c '#{pane_current_path}'
bind | split-window -v -c '#{pane_current_path}'
unbind '"'
unbind k

# Moving between panes with vim movement keys
bind -r h select-pane -L
bind -r j select-pane -D
bind -r k select-pane -U
bind -r l select-pane -R

# Resize panes
bind -r H resize-pane -L
bind -r J resize-pane -D
bind -r K resize-pane -U
bind -r L resize-pane -R
bind m resize-pane -Z

# Window Cycle/Swap
bind -r , previous-window
bind -r . next-window
bind -r < swap-window -t -1
bind -r > swap-window -t +1

# Setup vi-style copy/paste
set-window-option -g mode-keys vi
bind P paste-buffer
bind -T copy-mode-vi v send-keys -X begin-selection
bind -T copy-mode-vi y send-keys -X copy-selection
bind -T copy-mode-vi r send-keys -X rectangle-toggle

#
# Colors
#
set -g default-terminal "xterm-256color"

# Dracula Color Pallette
white='#f8f8f2'
gray='#44475a'
dark_gray='#282a36'
light_purple='#bd93f9'
dark_purple='#6272a4'
cyan='#8be9fd'
green='#50fa7b'
orange='#ffb86c'
red='#ff5555'
pink='#ff79c6'
yellow='#f1fa8c'

#
# Appearance
#

# status line options
set -g status-interval 5
set -g clock-mode-style 12
set -g status-left-length 100
set -g status-right-length 100

# Pane Border Styling
set-option -g pane-active-border-style "fg=${light_purple}"
set-option -g pane-border-style "fg=${gray}"

# Message Styling
set-option -g message-style "bg=${yellow},fg=${dark_purple}"

# Status Bar
set-option -g status-style "bg=${gray},fg=${white}"
set-option -g status-left "#[bg=${gray},fg=${white}]#{?client_prefix,#[bg=${yellow}]#[fg=${dark_gray}][Prefix],#{?window_zoomed_flag,#[bg=${orange}]#[fg=${dark_gray}]Zoomed,[#S]}}"
set-option -g status-right "#[fg=${white},bg=${dark_purple}] %a %d/%m %I:%M %p"

# Window Options
setw -g window-status-style fg=$white,bg=$gray
setw -g window-status-format ' #I: #W '
setw -g window-status-current-style bg=$white,bg=$dark_purple
setw -g window-status-current-format ' #I: #W '
setw -g window-status-activity-style "bold"
setw -g window-status-bell-style "bold"

# Notification
setw -g monitor-activity on
set -g visual-activity on
set-option -g bell-action any
set-option -g visual-bell off

# Automatically set window titles
set-option -g set-titles on
set-option -g set-titles-string '#h (Tmux)'
